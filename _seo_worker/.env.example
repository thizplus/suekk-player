# Worker Configuration
WORKER_ID=seo-worker-1
WORKER_CONCURRENCY=2

# NATS
NATS_URL=nats://localhost:4222
NATS_STREAM=SEO_ARTICLES

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgres://user:password@localhost:5432/subth?sslmode=disable

# API Endpoints
SUEKK_API_URL=https://api.suekk.com
SUEKK_API_TOKEN=your-internal-token

SUBTH_API_URL=https://api.subth.com
SUBTH_API_TOKEN=your-internal-token

# Gemini AI
# Development: gemini-1.5-flash (fast, cheap)
# Production: gemini-1.5-pro (deep, EEAT quality)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=flat2.0

# Storage (R2/S3)
STORAGE_ENDPOINT=https://xxx.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_BUCKET=subth-audio
STORAGE_PUBLIC_URL=https://files.subth.com

# Alert (Optional)
ALERT_ENABLED=true
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx
